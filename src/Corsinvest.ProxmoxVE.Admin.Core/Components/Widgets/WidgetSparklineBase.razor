@inherits AdminComponentBase
@typeparam TItem
@typeparam TSettings

<RadzenStack class="rz-w-100 rz-h-100">
    <RadzenSparkline Style="flex: 1">
        <RadzenAreaSeries Data="@Items"
                          Smooth="true"
                          Title="@SerieTitle"
                          CategoryProperty="@CategoryProperty"
                          ValueProperty="@ValueProperty">
            <RadzenMarkers Visible="true" MarkerType="MarkerType.Circle" />
        </RadzenAreaSeries>

        <RadzenValueAxis Formatter="@ValueFormatter" Visible="false" />
    </RadzenSparkline>

    @if (Footer != null)
    {
        @Footer
    }
</RadzenStack>
