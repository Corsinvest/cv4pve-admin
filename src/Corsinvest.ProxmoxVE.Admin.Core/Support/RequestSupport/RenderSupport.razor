@inherits AHComponentBase

<MudGrid>
    <MudItem md="6">
        <MudImage Src="/images/community.png" Fluid="true" />

        <MudText Typo="Typo.h4">@L["Community Support"]</MudText>
        <br />
        <MudText Typo="Typo.body1">
            @L["Everybody is welcome to visit the"]
            <MudLink Href="https://github.com/Corsinvest/cv4pve-admin" Target="_blank" Color="Color.Info">
                cv4pve-admin Community
            </MudLink>.
            @L["Join the growing community and participate in the discussions!"]

            @L["Corsinvest team monitors but does not guarantee a response to every question. For guaranteed responses and more, you may consider the"]
            <MudLink Href="https://shop.corsinvest.it/index.php?rp=/store/cv4pve-admin-pve" Target="_blank" Color="Color.Info">
                Enterprise Support
            </MudLink>.
            @L["option."]
        </MudText>
    </MudItem>

    <MudItem md="6">
        <MudImage Src="/images/enterprise.png" Fluid="true" />

        <MudText Typo="Typo.h4">@L["Enterprise Support"]</MudText>
        <br />
        <MudText Typo="Typo.body1">
            @L["Corsinvest offers Enterprise Support with the subscriptions."]

            <br />
            <MudButton Href="https://shop.corsinvest.it/index.php?rp=/store/cv4pve-admin-pve" Target="_blank" StartIcon="@Icons.Material.Filled.Support" Color="Color.Info" Variant="Variant.Filled">
                @L["Find out more"]
            </MudButton>
        </MudText>
    </MudItem>
</MudGrid>

<br />
<MudDivider />
<br />

<MudGrid>
    <MudItem md="4">
        <MudText>@L["Cluster Info:"]</MudText>
        <Corsinvest.ProxmoxVE.Admin.Core.UI.ProxmoxVE.Cluster.ClusterSelector ClusterNameChanged="ClusterNameChanged" />
    </MudItem>
    <MudItem md="12" />

    <MudItem md="12">
        <MudText Style="font-family: Courier New; font-size: inherit;">
            @((MarkupString)WhoUsing.Replace(" ", "&nbsp;").Replace(Environment.NewLine, "<br />"))
        </MudText>
    </MudItem>
    <MudItem md="12">
        @if (!string.IsNullOrEmpty(WhoUsing))
        {
            <MudButton Href="https://github.com/Corsinvest/cv4pve-admin/issues/11" Target="_blank" Variant="Variant.Filled"
                       Color="Color.Success">
                @L["Who's using cv4pve-admin?"]
            </MudButton>
            <MudButton Href="https://github.com/Corsinvest/cv4pve-admin/" Target="_blank" Variant="Variant.Filled"
                       StartIcon="@Icons.Material.Filled.Groups" Color="Color.Warning">
                @L["Support from community"]
            </MudButton>
        }
    </MudItem>

    <MudItem md="12">
        <MudText Style="font-family: Courier New; font-size: inherit;">
            @((MarkupString)Info.Replace(" ", "&nbsp;").Replace(Environment.NewLine, "<br />"))
        </MudText>
    </MudItem>
    <MudItem md="12">
        @if (!string.IsNullOrEmpty(Info))
        {
            <MudButton Href="https://shop.corsinvest.it/index.php?rp=/store/cv4pve-admin-pve" Target="_blank" Variant="Variant.Filled"
                       StartIcon="@Icons.Material.Filled.Support" Color="Color.Info">
                @L["Support from Corsinvest with subscription"]
            </MudButton>
        }
    </MudItem>
</MudGrid>