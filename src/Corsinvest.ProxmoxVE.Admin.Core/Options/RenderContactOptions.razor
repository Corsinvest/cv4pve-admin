@inherits AHComponentBase

<MudGrid>
    <MudItem md="6">
        <MudTextField T="string" @bind-Text="@AdminOptions.FirstName" Label="@L[GetDescriptionProperty<AdminOptions>(a => a.FirstName)]" Required />
    </MudItem>
    <MudItem md="6">
        <MudTextField T="string" @bind-Text="@AdminOptions.LastName" Label="@L[GetDescriptionProperty<AdminOptions>(a => a.LastName)]" Required />
    </MudItem>
    <MudItem md="6">
        <MudTextField T="string" @bind-Text="@AdminOptions.Company" Label="@L[GetDescriptionProperty<AdminOptions>(a => a.Company)]" Required />
    </MudItem>
    <MudItem md="6">
        <MudTextField T="string" @bind-Text="@AdminOptions.Email" Label="@L[GetDescriptionProperty<AdminOptions>(a => a.Email)]" Required />
    </MudItem>
</MudGrid>

@code
{
    [EditorRequired][Parameter] public AdminOptions AdminOptions { get; set; } = default!;
}