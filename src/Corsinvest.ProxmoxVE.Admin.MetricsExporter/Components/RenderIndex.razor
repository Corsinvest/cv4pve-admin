@inherits AHComponentBase

@if (ClusterOptions != null)
{
    <MudText>@L["Prometeus Exporter"]</MudText>
    <MudLink Href="@($"{Module.GetUrl(ClusterOptions.Name)}")" Target="_blank">@ClusterOptions.FullName</MudLink>
}

@code
{
    [Inject] private IPveClientService PveClientService { get; set; } = default!;

    private ClusterOptions ClusterOptions { get; set; } = default!;

    protected override async Task OnInitializedAsync() => ClusterOptions = (await PveClientService.GetCurrentClusterOptions())!;
}