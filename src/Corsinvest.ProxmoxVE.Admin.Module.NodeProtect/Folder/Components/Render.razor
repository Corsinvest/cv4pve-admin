@inherits AdminComponentBase

<RadzenDataGrid TItem="Data"
                Data="@Items"
                AllowFiltering="true"
                AllowColumnResize="true"
                AllowAlternatingRows="false"
                AllGroupsExpanded="false"
                AllowSorting="true"
                AllowVirtualization="true"
                Style="height: calc(100vh - 140px);"
                FilterPopupRenderMode="PopupRenderMode.OnDemand"
                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                AllowGrouping="true"
                AllowColumnPicking="true"
                Render="OnRender"
                @bind-Value="@SelectedItems">
    <HeaderTemplate>
        <CrudToolbar OnRefresh="RefreshDataAsync">
            <TemplateBefore>
                <RadzenButton Variant="Variant.Text"
                              Size="ButtonSize.Small"
                              Text="@L["Backup"]"
                              Click="Backup"
                              Icon="play_arrow"
                              Style="--rz-icon-fill: 1;"
                              ButtonStyle="ButtonStyle.Success"
                              Disabled="!Settings.Folder.Enabled"
                              title="@L["Backup"]"
                              aria-label="@L["Backup"]" />

                <RadzenButton Variant="Variant.Text"
                              Size="ButtonSize.Small"
                              Text="@L["Delete"]"
                              Icon="delete"
                              Click="DeleteAsync"
                              Disabled="!SelectedItems.Any()"
                              ButtonStyle="ButtonStyle.Danger"
                              title="@L["Delete"]"
                              aria-label="@L["Delete"]" />
            </TemplateBefore>

            <TemplateAfter>
                <InfoScheduler TModule="Module" JobSchedule="@Settings" />
            </TemplateAfter>
        </CrudToolbar>
    </HeaderTemplate>

    <EmptyTemplate>
        <EmptyExecuteAction Text="@L["Execute your first backup"]"
                            Click="Backup"
                            Icon="play_arrow"
                            Style="--rz-icon-fill: 1;" />
    </EmptyTemplate>

    <GroupHeaderTemplate>
        <strong>@context.GroupDescriptor!.GetTitle()</strong>: @context.Data!.Key (@context.Data.Count) @FormatHelper.FromBytes(context.Data.Items!.Cast<Data>().Sum(a => a.Size))
    </GroupHeaderTemplate>

    <Columns>
        <RadzenDataGridColumn Property="@nameof(Data.TaskId)" Title="@L["Task Id"]" Sortable="true" />
        <RadzenDataGridColumn Property="@nameof(Data.Node)" Title="@L["Ip Or Host"]" />
        <RadzenDataGridColumn Property="@nameof(Data.Start)" Title="@L["Start"]" />
        <RadzenDataGridColumn Property="@nameof(Data.End)" Title="@L["End"]" />
        <RadzenDataGridColumn Property="@nameof(Data.Duration)" Title="@L["Duration"]" FormatString="{0:hh':'mm':'ss}" />
        <RadzenDataGridColumn Property="@nameof(Data.FileName)" Title="@L["File Name"]" />

        <BoolIconColumn Property="@nameof(Data.Status)"
                        Title="@L["Status"]"
                        IconTrue="thumb_up"
                        IconColorTrue="@Colors.Success"
                        IconFalse="thumb_down"
                        IconColorFalse="@Colors.Danger"
                        IconStyle="--rz-icon-fill: 1" />

        <RadzenDataGridColumn Property="@nameof(Data.Size)" Title="@L["Size"]"
                              FormatString="@FormatHelper.DataFormatBytes"
                              FormatProvider="FormatterHelper.FormatProvider" />

        <RadzenDataGridColumn Filterable="false"
                              Sortable="false"
                              TextAlign="TextAlign.Right"
                              Frozen="true"
                              FrozenPosition="FrozenColumnPosition.Right"
                              Reorderable="false"
                              Pickable="false"
                              Resizable="false"
                              Groupable="false"
                              Width="110px">
            <Template Context="ctx">
                <RadzenButton Variant="Variant.Text"
                              Size="ButtonSize.Small"
                              Icon="download"
                              Click="@(() => DownloadAsync(ctx))"
                              IsBusy="InDownload"
                              title="@L["Download"]"
                              aria-label="@L["Download"]" />

                <RadzenButton Variant="Variant.Text"
                              Size="ButtonSize.Small"
                              Icon="description"
                              ButtonStyle="ButtonStyle.Primary"
                              Click="@(() => ShowLogAsync(ctx))"
                              @onclick:stopPropagation="true"
                              title="@L["Show log"]"
                              aria-label="@L["Show VM log"]" />
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>
