@page "/ForgotPassword"

@inherits AdminComponentBase

<PageTitle>@L["Forgot your password?"]</PageTitle>

<RadzenText Text="@L["Forgot your password?"]" TextStyle="TextStyle.H4" />
<RadzenText Text="@L["Enter your email."]" TextStyle="TextStyle.H5" />

<RadzenTemplateForm TItem="InputModel" Data="@Input" Submit="@OnValidSubmitAsync">
    <RadzenStack Orientation="Orientation.Vertical" Gap="10px" JustifyContent="JustifyContent.End">
        <RadzenFormField Text="@L["Email"]" class="rz-w-100">
            <End>
                <RadzenIcon Icon="alternate_email" />
            </End>
            <ChildContent>
                <RadzenTextBox @bind-Value="Input.Email"
                               Name="@nameof(Input.Email)"
                               AutoCompleteType="AutoCompleteType.Username" />
            </ChildContent>
            <Helper>
                <RadzenDataAnnotationValidator Component="@nameof(Input.Email)" />
            </Helper>
        </RadzenFormField>

        <RadzenButton ButtonType="ButtonType.Submit"
                      Text="@L["Reset"]"
                      IsBusy="@IsBusy"
                      BusyText="@L["Resetting ..."]"
                      Variant="Variant.Flat"
                      title="@L["Reset"]"
                      aria-label="@L["Reset"]"
                      Style="width:fit-content;" />

        <RadzenLink Path="/Login" Text="@L["Back"]" />
    </RadzenStack>
</RadzenTemplateForm>
