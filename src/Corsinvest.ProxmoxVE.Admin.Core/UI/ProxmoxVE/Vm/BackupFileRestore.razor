<MudTreeView T="NodeBackupFile" ServerData="LoadServerData"
             Items="TreeItems" SelectedValueChanged="@SelectedFileChanged">
    <ItemTemplate>
        <MudTreeViewItem Value="@context"
                         Icon="@GetIcon(context)"
                         LoadingIconColor="Color.Info"
                         Text="@context.Text"
                         ExpandedIcon="@(context.Type == "f" ? "" : Icons.Material.Filled.KeyboardArrowRight)"
                         EndText="@GetEndText(context)"
                         EndTextTypo="@Typo.caption">
        </MudTreeViewItem>
    </ItemTemplate>
</MudTreeView>
