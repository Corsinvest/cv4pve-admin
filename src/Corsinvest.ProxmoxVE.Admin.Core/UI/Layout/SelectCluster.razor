@inherits AHComponentBase

@*Style="@("background-color: var(--mud-palette-" + (UIOptions.Value.Theme.DarkMode ? "dark" : "white")+ ")")"*@

<MudSelect T="string" Margin="Margin.Dense" Dense AnchorOrigin="Origin.BottomCenter"
           Value="@CurrentClusterName" ValueChanged="ValueChanged"
           Style="background-color: var(--mud-palette-background)"           
           Variant="Variant.Outlined" Label="Cluster">
    @foreach (var item in PveClientService.GetClustersNames())
    {
        <MudSelectItem Value="@item.Key">
            @item.Key - @item.Value
        </MudSelectItem>
    }
</MudSelect>