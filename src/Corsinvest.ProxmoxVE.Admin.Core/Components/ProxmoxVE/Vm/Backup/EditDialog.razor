@inherits AdminComponentBase

@implements IModelParameter<NodeStorageContent>

<SwitchField @bind-Value="@Model.Protected"
             Label="@L["Protected"]"
             Name="@nameof(Model.Protected)"
             IconOn="lock"
             IconOff="lock_open"
             class="rz-w-100" />

<RadzenFormField Text="@L["Notes"]" AllowFloatingLabel="false">
    <Start>
        <RadzenIcon Icon="notes" />
    </Start>
    <ChildContent>
        <RadzenTextArea @bind-Value="@Model.Notes" Rows="10" />
    </ChildContent>
</RadzenFormField>

@code
{
    [Parameter] public NodeStorageContent Model { get; set; } = default!;
}
