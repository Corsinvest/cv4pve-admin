@inherits AHModuleOptionsBase<Options>

<PveOptionsModuleRender T="ModuleClusterOptions" Options="@Options">
    <Row>
        <MudGrid>
            <MudItem xs="6" md="3">
                <MudSwitch T="bool" @bind-Checked="@context.Enabled" Label="@L[GetDescriptionProperty(a =>  a.Clusters[0].Enabled)]"
                           For="@(() => context.Enabled)" Color="Color.Primary" />
            </MudItem>

            <MudItem xs="12" md="12">
                <MudPasswordField T="string" @bind-Value="@context.Token" Label="@L[GetDescriptionProperty(a =>  a.Clusters[0].Token)]"
                                  For="@(() => context.Token)" />
            </MudItem>

            <MudItem xs="12" md="12">
                <MudTextField T="string" @bind-Value="@context.ChatsId" Label="@L[GetDescriptionProperty(a =>  a.Clusters[0].ChatsId)]"
                              For="@(() => context.ChatsId)" Lines="3" />
            </MudItem>
        </MudGrid>
    </Row>
</PveOptionsModuleRender>
