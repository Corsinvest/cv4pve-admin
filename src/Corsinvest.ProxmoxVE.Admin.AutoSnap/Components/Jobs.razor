@inherits AHComponentBase

<AHDataGrid T="AutoSnapJob"
            Permissions="Module.Permissions.Job.Data"
            FixedHeader
            FixedFooter
            DataGridManager="DataGridManager"
            Filterable
            Groupable
            ShowFilterIcons="false"
            Height="@Height"
            FilterCaseSensitivity="DataGridFilterCaseSensitivity.CaseInsensitive"
            ShowColumnOptions="false"
            MultiSelection>
    <ToolBarContent>
        <AHDataGridToolBarCrud T="AutoSnapJob" DataGridManager="DataGridManager" />
    </ToolBarContent>
    <Columns>
        <HierarchyColumn T="AutoSnapJob" />
        <SelectColumn T="AutoSnapJob" ShowInFooter="false" />

        <AHPropertyColumn T="AutoSnapJob" TProperty="int" Property="a => a.Id" Sortable="false" />

        <AHPropertyColumn T="AutoSnapJob" TProperty="bool" Property="a => a.Enabled" Sortable="false">
            <CellTemplate>
                <MudCheckBox Checked="@context.Item.Enabled" ReadOnly />
            </CellTemplate>
        </AHPropertyColumn>

        <AHPropertyColumn T="AutoSnapJob" TProperty="string" Property="a => a.VmIds" Sortable="false" />
        <AHPropertyColumn T="AutoSnapJob" TProperty="string" Property="a => a.Label" Sortable="false" />
        <AHPropertyColumn T="AutoSnapJob" TProperty="string" Property="a => a.Description" Sortable="false" />
        <AHPropertyColumn T="AutoSnapJob" TProperty="int" Property="a => a.Keep" Sortable="false" />
        <AHPropertyColumn T="AutoSnapJob" TProperty="bool" Property="a => a.VmStatus" Sortable="false">
            <CellTemplate>
                <MudCheckBox Checked="@context.Item.VmStatus" ReadOnly />
            </CellTemplate>
        </AHPropertyColumn>

        <AHPropertyColumn T="AutoSnapJob" TProperty="bool" Property="a => a.OnlyRuns" Sortable="false">
            <CellTemplate>
                <MudCheckBox Checked="@context.Item.OnlyRuns" ReadOnly />
            </CellTemplate>
        </AHPropertyColumn>

        <AHPropertyColumn T="AutoSnapJob" TProperty="long" Property="a => a.TimeoutSnapshot" Sortable="false" />

        <AHPropertyColumn T="AutoSnapJob" TProperty="string" Property="a => a.CronExpressionDescriptor" Sortable="false" />

        <AHPropertyColumn T="AutoSnapJob" TProperty="DateTimeOffset?" Property="a => a.LastRunTime" Sortable="false" />
        <AHPropertyColumn T="AutoSnapJob" TProperty="DateTimeOffset?" Property="a => a.NextRunTime" Sortable="false" />

        <TemplateColumn T="AutoSnapJob" CellClass="justify-end" Sortable="false">
            <CellTemplate>
                <MudButtonGroup Variant="Variant.Text">
                    <AHDataGridColumnEdit T="AutoSnapJob" DataGridManager="DataGridManager" Context="@context" />
                    <AHPermissionButtonIcon Permission="Module.Permissions.Job.Snap" OnClick="@(() => Snap(context.Item))" />
                    <AHPermissionButtonIcon Permission="Module.Permissions.Job.Clean" OnClick="@(() => Clean(context.Item))" />
                </MudButtonGroup>
            </CellTemplate>
        </TemplateColumn>
    </Columns>

    <EditTemplate>
        <MudTabs Elevation="1" ApplyEffectsToContainer Border>
            <MudTabPanel Text="@L["Autosnap"]" Icon="@Icons.Material.Filled.CameraAlt">
                <MudGrid Class="pa-4">
                    <MudItem md="6">
                        <MudTextField Value="@context.Id" Label="@(L[GetDescriptionProperty<AutoSnapJob>(a => a.Id)])"
                                      For="@(() => context.Id)" ReadOnly />
                    </MudItem>

                    <MudItem md="6">
                        <MudSwitch @bind-Checked="@context.Enabled" Label="@(L[GetDescriptionProperty<AutoSnapJob>(a => a.Enabled)])"
                                   For="@(() => context.Enabled)" Color="Color.Primary" />

                        <MudSwitch @bind-Checked="@context.VmStatus" Label="@(L[GetDescriptionProperty<AutoSnapJob>(a => a.VmStatus)])"
                                   For="@(() => context.VmStatus)" Color="Color.Primary" />

                        <MudSwitch @bind-Checked="@context.OnlyRuns" Label="@(L[GetDescriptionProperty<AutoSnapJob>(a => a.OnlyRuns)])"
                                   For="@(() => context.OnlyRuns)" Color="Color.Primary" />
                    </MudItem>

                    <MudItem md="6">
                        <MudTextField @bind-Value="@context.Label" Label="@(L[GetDescriptionProperty<AutoSnapJob>(a => a.Label)])"
                                      For="@(() => context.Label)" />
                    </MudItem>

                    <MudItem md="6">
                        <MudNumericField @bind-Value="@context.Keep" Label="@(L[GetDescriptionProperty<AutoSnapJob>(a => a.Keep)])"
                                         For="@(() => context.Keep)" />
                    </MudItem>

                    <MudItem md="6">
                        <MudTextField @bind-Value="@context.Description" Label="@(L[GetDescriptionProperty<AutoSnapJob>(a => a.Description)])"
                                      For="@(() => context.Description)" />
                    </MudItem>

                    <MudItem md="6">
                        <MudComboBox @ref="RefMudComboBox" @bind-SelectedValues="@VmIdsList"
                                     InputPresenter="ValuePresenter.Chip" ChipCloseable="true" ChipVariant="Variant.Filled"
                                     Label="@(L[GetDescriptionProperty<AutoSnapJob>(a => a.VmIds)])"
                                     MultiSelection="true" Editable="true" ShowCheckbox="true" Bordered="true" Dense="Dense.Standard"
                                     Color="Color.Primary" Clearable="true">
                            <ChildContent>
                                @foreach (var item in VmIds)
                                {
                                    <MudComboBoxItem Value="@item" Text="@item" />
                                }
                            </ChildContent>

                            <PopoverEndContent>
                                <div class="d-flex gap-4 pa-4">
                                    <MudIconButton Icon="@Icons.Material.Filled.Add" Variant="Variant.Outlined" Color="Color.Primary" OnClick="AddItem" />
                                    <MudTextFieldExtended @bind-Value="AddedValue" Variant="Variant.Outlined" Margin="Margin.Dense" />
                                </div>
                            </PopoverEndContent>
                        </MudComboBox>
                    </MudItem>

                    <MudItem md="12">
                        <AHCronScheduler @bind-Expression="@context.CronExpression" ShowDescriptor Orientation="Orientation.Landscape" />
                    </MudItem>
                </MudGrid>
            </MudTabPanel>

            <MudTabPanel Text="@L["Hooks"]" Icon="@Icons.Material.Filled.Api">
                <Hooks Job="@context" />
            </MudTabPanel>
        </MudTabs>

    </EditTemplate>

    <ChildRowContent>
        <MudTabs Elevation="1" ApplyEffectsToContainer Border>
            <MudTabPanel Text="@L["Histories"]" Icon="@Icons.Material.Filled.History">
                <Histories JobId="@context.Item.Id" />
            </MudTabPanel>

            <MudTabPanel Text="@L["Status"]" Icon="@Icons.Material.Filled.List">
                <Status VmIdsOrNames="@context.Item.VmIds" />
            </MudTabPanel>
        </MudTabs>
    </ChildRowContent>

    <NoRecordsContent>
        <AHNoRecordsContent />
    </NoRecordsContent>

    <LoadingContent>
        <AHLoadingContent />
    </LoadingContent>

    <PagerContent>
        <MudDataGridPager T="AutoSnapJob" />
    </PagerContent>
</AHDataGrid>