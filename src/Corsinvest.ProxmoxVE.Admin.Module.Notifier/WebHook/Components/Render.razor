@inherits AdminComponentBase

<NotifierSettingsDataGrid TSettings="Settings">
    <GridColumns>
        <RadzenDataGridColumn TItem="Settings" Property="@($"{nameof(Settings.WebHook)}.{nameof(Core.Hooks.WebHook.Method)}")" Sortable="true" Title="@L["Method"]" />
        <RadzenDataGridColumn TItem="Settings" Property="@($"{nameof(Settings.WebHook)}.{nameof(Core.Hooks.WebHook.BodyType)}")" Sortable="true" Title="@L["Body Type"]" />
    </GridColumns>

    <EditContent>
        <WebHookEditor @bind-Value="@context.WebHook">
            <BodyHelper>
                <RadzenText TextStyle="TextStyle.Caption">
                    @L["Use"] <strong>%subject%</strong> @L["and"] <strong>%body%</strong> @L["as placeholders. Leave empty for default JSON payload."]
                </RadzenText>
            </BodyHelper>
        </WebHookEditor>
    </EditContent>
</NotifierSettingsDataGrid>
