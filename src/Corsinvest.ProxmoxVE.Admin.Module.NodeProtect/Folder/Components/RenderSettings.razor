@inherits AdminComponentBase
@implements IModelParameter<Settings>

<SwitchField @bind-Value="@Model.Folder.Enabled"
             Label="@L["Enabled"]"
             Name="Model.Folder.Enabled"
             IconOn="play_circle"
             IconOff="pause_circle" />

<RadzenFormField Text="@L["Number which should will keep"]" AllowFloatingLabel="false" class="rz-w-100">
    <Start>
        <RadzenIcon Icon="layers" />
    </Start>
    <ChildContent>
        <RadzenNumeric Name="Folder.Keep" @bind-Value="@Model.Folder.Keep" />
    </ChildContent>
    <Helper>
        <RadzenDataAnnotationValidator Component="Folder.Keep" />
    </Helper>
</RadzenFormField>

@code
{
    [Parameter] public Settings Model { get; set; } = default!;
}
