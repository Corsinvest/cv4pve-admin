    <Row>
        <MudGrid>
            <MudItem xs="12" md="4">
                <ThresholdPercentageOptions Title="CPU" Icon="@PveBlazorHelper.Icons.Cpu" Threshold="@context.Cpu" />
            </MudItem>

            <MudItem xs="12" md="4">
                <ThresholdPercentageOptions Title="Memory" Icon="@PveBlazorHelper.Icons.Memory" Threshold="@context.Memory" />
            </MudItem>

            <MudItem xs="12" md="4">
                <ThresholdPercentageOptions Title="Storage" Icon="@PveBlazorHelper.Icons.Storage" Threshold="@context.Storage" />
            </MudItem>
        </MudGrid>
    </Row>
